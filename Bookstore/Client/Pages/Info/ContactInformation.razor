@page "/info/contact-information"

<MudContainer MaxWidth=MaxWidth.Medium>
    <MudText Style="font-size: 32px; font-weight: 600; line-height: 40px; margin-bottom: 32px;">Контакты</MudText>
    <div class="row">
        <div class="col-md-6 col-12">
            <div class="row">
                <div class="col-2">
                    <MudIcon Icon="@Icons.Filled.PhoneIphone" Class="w-100 h-100"></MudIcon>
                </div>
                <div class="col-10">
                    <MudText Style="font-weight:500; font-size:20px; line-height: 28px; margin-bottom: 8px;">+7-937-571-45-68</MudText>
                    <p style="font-size:14px; color:#7d8290; margin:0;">Служба клиентской поддержки</p>
                    <p style="font-size:14px; color:#7d8290; margin:0;">С 8:00 - 20:00 (Мск)</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="row">
                <div class="col-2">
                    <MudIcon Icon="@Icons.Filled.Email" Class="w-100 h-100"></MudIcon>
                </div>
                <div class="col-10">
                    <MudText Style="font-weight:500; font-size:20px; line-height: 28px; margin-bottom: 8px;">vorobevemil@@gmail.com</MudText>
                    <p style="font-size:14px; color:#7d8290; margin:0;">Наш электронный адрес</p>
                </div>
            </div>
        </div>
    </div>
    <MudText Style="font-weight:500; font-size:20px; line-height: 28px; padding-top: 24px;  margin-bottom: 8px;">Обратная связь</MudText>

    <div class="mt-5">
        <form>
            <div class="form-group">
                <MudText>Как к вам обращаться?</MudText>
                <MudTextField Variant="Variant.Outlined" @bind-Value="model.UserName" Placeholder="Введите ваше имя" />
            </div>
            <div class="form-group mt-2">
                <MudText>Email</MudText>
                <MudTextField Variant="Variant.Outlined" @bind-Value="model.Email" Placeholder="Введите свой Email" />
            </div>
            <div class="form-group mt-2">
                <MudText>Ваш вопрос</MudText>
                <MudTextField Variant="Variant.Outlined" @bind-Value="model.Message" Lines="4" Placeholder="Напишите ваш вопрос" />

            </div>
            <MudButton Variant="Variant.Filled" Color="Color.Info" class="btn btn-primary mt-3" OnClick="ShowSnachbar">Отправить</MudButton>
        </form>
    </div>
</MudContainer>

@code {
#nullable disable
    [Inject] private ISnackbar Snackbar { get; set; }
#nullable enable

    ContactInformationModel model = new ContactInformationModel();

    private void ShowSnachbar()
    {
        Snackbar.Add("Ваша заявка добавлена");
    }

    class ContactInformationModel
    {
#nullable disable
        public string UserName { get; set; }
        public string Email { get; set; }
        public string Message { get; set; }
    }
}